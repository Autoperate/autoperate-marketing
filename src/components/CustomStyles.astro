---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(14 119 105);
    --aw-color-primary-hover: rgb(20 162 136);
    --aw-color-secondary: rgb(194 162 74);
    --aw-color-accent: rgb(14 119 105);

    --aw-color-text-heading: rgb(236 238 239);
    --aw-color-text-default: rgb(210 216 220);
    --aw-color-text-muted: rgb(160 168 174);
    --aw-color-text-page: var(--aw-color-text-default);

    --aw-color-bg-page: rgb(15 20 23);
    --aw-color-bg-page-dark: rgb(11 15 18);
    --aw-color-bg-surface: rgb(20 27 32);
    --aw-color-bg-surface-40: rgb(20 27 32 / 40%);
    --aw-color-bg-surface-70: rgb(20 27 32 / 70%);
    --aw-color-border: rgb(42 51 57);

    ::selection {
      background-color: rgb(14 119 105 / 45%);
      color: var(--aw-color-text-heading);
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(14 119 105);
    --aw-color-primary-hover: rgb(20 162 136);
    --aw-color-secondary: rgb(194 162 74);
    --aw-color-accent: rgb(14 119 105);

    --aw-color-text-heading: rgb(236 238 239);
    --aw-color-text-default: rgb(210 216 220);
    --aw-color-text-muted: rgb(160 168 174);
    --aw-color-text-page: var(--aw-color-text-default);

    --aw-color-bg-page: rgb(15 20 23);
    --aw-color-bg-page-dark: rgb(11 15 18);
    --aw-color-bg-surface: rgb(20 27 32);
    --aw-color-bg-surface-40: rgb(20 27 32 / 40%);
    --aw-color-bg-surface-70: rgb(20 27 32 / 70%);
    --aw-color-border: rgb(42 51 57);

    ::selection {
      background-color: rgb(14 119 105 / 45%);
      color: var(--aw-color-text-heading);
    }
  }
</style>
