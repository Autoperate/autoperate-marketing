---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Submission received">
  <section class="min-h-[60vh] flex items-center justify-center px-6">
    <div class="max-w-md text-center space-y-4">
      <h1 class="text-xl font-semibold text-white">
        Submission received.
      </h1>

      <p class="text-sm text-gray-400">
        This does not guarantee access. We review each request one at a time.
        We will be in touch for more information if necessary.
      </p>

      <a
        href="/"
        class="inline-block mt-4 text-sm text-gray-300 hover:text-white underline"
      >
        Back to site
      </a>
    </div>
  </section>
</Layout>
