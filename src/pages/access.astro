---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Request Access — Autoperate',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <section class="relative py-16 sm:py-20">
    <div class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8">
      <div class="mb-10">
        <h1 class="text-3xl font-semibold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
          Request access
        </h1>

        <p class="mt-3 text-base text-gray-600 dark:text-slate-300">
          <span class="font-medium text-gray-900 dark:text-white">Autoperate is currently invite-only.</span><br />
          This form records basic information about your business so we can determine whether access is appropriate.
        </p>
      </div>

      <div class="rounded-2xl border border-gray-200 bg-white/70 p-6 shadow-sm backdrop-blur dark:border-slate-800 dark:bg-slate-950/40 sm:p-8">
        <form
          name="access-request"
          method="POST"
          data-netlify="true"
          netlify-honeypot="bot-field"
          action="/access?submitted=true"
          class="grid grid-cols-1 gap-6 sm:grid-cols-2"
        >
          <input type="hidden" name="form-name" value="access-request" />
          <p class="hidden">
            <label>
              Don’t fill this out if you’re human:
              <input name="bot-field" />
            </label>
          </p>

          <div>
            <label for="fullName" class="block text-sm font-medium text-gray-900 dark:text-white">Full name</label>
            <input
              id="fullName"
              name="fullName"
              type="text"
              required
              class="mt-2 w-full rounded-xl border border-gray-300 bg-white px-4 py-3 text-gray-900 shadow-sm outline-none ring-0 focus:border-gray-900 dark:border-slate-700 dark:bg-slate-900 dark:text-white dark:focus:border-white"
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-gray-900 dark:text-white">Email</label>
            <input
              id="email"
              name="email"
              type="email"
              required
              class="mt-2 w-full rounded-xl border border-gray-300 bg-white px-4 py-3 text-gray-900 shadow-sm outline-none ring-0 focus:border-gray-900 dark:border-slate-700 dark:bg-slate-900 dark:text-white dark:focus:border-white"
            />
          </div>

          <div>
            <label for="businessName" class="block text-sm font-medium text-gray-900 dark:text-white">Business name</label>
            <input
              id="businessName"
              name="businessName"
              type="text"
              required
              class="mt-2 w-full rounded-xl border border-gray-300 bg-white px-4 py-3 text-gray-900 shadow-sm outline-none ring-0 focus:border-gray-900 dark:border-slate-700 dark:bg-slate-900 dark:text-white dark:focus:border-white"
            />
          </div>

          <div>
            <label for="cityState" class="block text-sm font-medium text-gray-900 dark:text-white">City / State</label>
            <input
              id="cityState"
              name="cityState"
              type="text"
              required
              placeholder="Chicago, IL"
              class="mt-2 w-full rounded-xl border border-gray-300 bg-white px-4 py-3 text-gray-900 shadow-sm outline-none ring-0 focus:border-gray-900 dark:border-slate-700 dark:bg-slate-900 dark:text-white dark:focus:border-white"
            />
          </div>

          <div>
            <label for="phone" class="block text-sm font-medium text-gray-900 dark:text-white">Phone (optional)</label>
            <input
              id="phone"
              name="phone"
              type="tel"
              class="mt-2 w-full rounded-xl border border-gray-300 bg-white px-4 py-3 text-gray-900 shadow-sm outline-none ring-0 focus:border-gray-900 dark:border-slate-700 dark:bg-slate-900 dark:text-white dark:focus:border-white"
            />
          </div>

          <div>
            <label for="website" class="block text-sm font-medium text-gray-900 dark:text-white">
              Website or public profile (optional)
            </label>
            <input
              id="website"
              name="website"
              type="url"
              placeholder="https://…"
              class="mt-2 w-full rounded-xl border border-gray-300 bg-white px-4 py-3 text-gray-900 shadow-sm outline-none ring-0 focus:border-gray-900 dark:border-slate-700 dark:bg-slate-900 dark:text-white dark:focus:border-white"
            />
          </div>

          <div>
            <label for="role" class="block text-sm font-medium text-gray-900 dark:text-white">Your role</label>
            <select
              id="role"
              name="role"
              required
              class="mt-2 w-full rounded-xl border border-gray-300 bg-white px-4 py-3 text-gray-900 shadow-sm outline-none ring-0 focus:border-gray-900 dark:border-slate-700 dark:bg-slate-900 dark:text-white dark:focus:border-white"
            >
              <option value="" selected disabled>Select…</option>
              <option>Owner</option>
              <option>Operator</option>
              <option>Manager</option>
              <option>Analyst</option>
              <option>Other</option>
            </select>
          </div>

          <div>
            <label for="businessType" class="block text-sm font-medium text-gray-900 dark:text-white">Business type</label>
            <select
              id="businessType"
              name="businessType"
              required
              class="mt-2 w-full rounded-xl border border-gray-300 bg-white px-4 py-3 text-gray-900 shadow-sm outline-none ring-0 focus:border-gray-900 dark:border-slate-700 dark:bg-slate-900 dark:text-white dark:focus:border-white"
            >
              <option value="" selected disabled>Select…</option>
              <option>Service business</option>
              <option>Retail</option>
              <option>Manufacturing</option>
              <option>Professional services</option>
              <option>Other</option>
            </select>
          </div>

          <div class="sm:col-span-2">
            <label for="sells" class="block text-sm font-medium text-gray-900 dark:text-white">
              What does your business sell?
            </label>
            <p class="mt-2 text-sm text-gray-600 dark:text-slate-300">Products, services, or combinations.</p>
            <textarea
              id="sells"
              name="sells"
              rows="3"
              required
              class="mt-2 w-full rounded-xl border border-gray-300 bg-white px-4 py-3 text-gray-900 shadow-sm outline-none ring-0 focus:border-gray-900 dark:border-slate-700 dark:bg-slate-900 dark:text-white dark:focus:border-white"
            ></textarea>
          </div>

          <div class="sm:col-span-2">
            <label for="does" class="block text-sm font-medium text-gray-900 dark:text-white">
              What does your business actually do day to day?
            </label>
            <p class="mt-2 text-sm text-gray-600 dark:text-slate-300">
              Describe the work that happens to deliver what you sell.
            </p>
            <textarea
              id="does"
              name="does"
              rows="4"
              required
              class="mt-2 w-full rounded-xl border border-gray-300 bg-white px-4 py-3 text-gray-900 shadow-sm outline-none ring-0 focus:border-gray-900 dark:border-slate-700 dark:bg-slate-900 dark:text-white dark:focus:border-white"
            ></textarea>
          </div>

          <div class="sm:col-span-2">
            <label for="notes" class="block text-sm font-medium text-gray-900 dark:text-white">
              Anything else relevant to how your business operates? (optional)
            </label>
            <textarea
              id="notes"
              name="notes"
              rows="3"
              class="mt-2 w-full rounded-xl border border-gray-300 bg-white px-4 py-3 text-gray-900 shadow-sm outline-none ring-0 focus:border-gray-900 dark:border-slate-700 dark:bg-slate-900 dark:text-white dark:focus:border-white"
            ></textarea>
          </div>

          <div class="sm:col-span-2 flex items-start gap-3">
            <input
              id="consent"
              name="consent"
              type="checkbox"
              required
              class="mt-1 h-4 w-4 rounded border-gray-300 text-gray-900 focus:ring-0 dark:border-slate-700"
            />
            <label for="consent" class="text-sm text-gray-700 dark:text-slate-300">
              I understand Autoperate is invite-only and access requests are reviewed manually.
            </label>
          </div>

          <div class="sm:col-span-2 flex items-center justify-between gap-4">
            <a href="/" class="text-sm text-gray-600 hover:text-gray-900 dark:text-slate-300 dark:hover:text-white">
              ← Back
            </a>

            <div class="flex flex-col items-end gap-2">
              <button
                type="submit"
                class="inline-flex items-center justify-center rounded-xl bg-gray-900 px-5 py-3 text-sm font-medium text-white shadow-sm hover:bg-black focus:outline-none dark:bg-white dark:text-black dark:hover:bg-gray-100"
              >
                Submit request
              </button>

              <p class="text-xs text-gray-500 dark:text-slate-400">Submitting this form does not guarantee access.</p>
            </div>
          </div>
        </form>
      </div>
    </div>
  </section>
</Layout>
