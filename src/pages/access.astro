---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Request Access">
  <section class="relative mx-auto max-w-3xl px-6 py-24">
    <header class="mb-10">
      <h1 class="text-3xl font-semibold tracking-tight text-gray-900 dark:text-white">
        Request access
      </h1>
      <p class="mt-3 text-sm text-gray-600 dark:text-slate-300">
        <strong>Autoperate is currently invite-only.</strong>
        This form records basic information about your business so we can determine whether access is appropriate.
      </p>
    </header>

    <form
     <form
  name="access-request"
  method="POST"
  data-netlify="true"
  action="/thanks"
  class="grid grid-cols-1 gap-6 sm:grid-cols-2 rounded-2xl border border-gray-200 bg-white/70 p-8 shadow-sm backdrop-blur dark:border-slate-800 dark:bg-slate-900/70"
>
      <input type="hidden" name="form-name" value="access-request" />

      <!-- Full name -->
      <div>
        <label class="block text-sm font-medium text-gray-900 dark:text-white">
          Full name
        </label>
        <input
          type="text"
          name="name"
          required
          class="mt-2 w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-900 shadow-sm focus:border-gray-900 dark:border-slate-700 dark:bg-slate-900 dark:text-white"
        />
      </div>

      <!-- Email -->
      <div>
        <label class="block text-sm font-medium text-gray-900 dark:text-white">
          Email
        </label>
        <input
          type="email"
          name="email"
          required
          class="mt-2 w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-900 shadow-sm focus:border-gray-900 dark:border-slate-700 dark:bg-slate-900 dark:text-white"
        />
      </div>

      <!-- Business name -->
      <div>
        <label class="block text-sm font-medium text-gray-900 dark:text-white">
          Business name
        </label>
        <input
          type="text"
          name="business"
          required
          class="mt-2 w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-900 shadow-sm focus:border-gray-900 dark:border-slate-700 dark:bg-slate-900 dark:text-white"
        />
      </div>

      <!-- City / State -->
      <div>
        <label class="block text-sm font-medium text-gray-900 dark:text-white">
          City / State
        </label>
        <input
          type="text"
          name="location"
          placeholder="Chicago, IL"
          required
          class="mt-2 w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-900 shadow-sm focus:border-gray-900 dark:border-slate-700 dark:bg-slate-900 dark:text-white"
        />
      </div>

      <!-- Phone -->
      <div>
        <label class="block text-sm font-medium text-gray-900 dark:text-white">
          Phone (optional)
        </label>
        <input
          type="tel"
          name="phone"
          class="mt-2 w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-900 shadow-sm focus:border-gray-900 dark:border-slate-700 dark:bg-slate-900 dark:text-white"
        />
      </div>

     <!-- Website or public profile (optional) -->
<div>
  <label class="block text-sm font-medium text-gray-900 dark:text-white">
    Website or public profile (optional)
  </label>
  <input
    type="text"
    name="website"
    placeholder="example.com or https://example.com"
    inputmode="url"
    autocomplete="url"
    class="mt-2 w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-900 shadow-sm focus:border-gray-900 dark:border-slate-700 dark:bg-slate-900 dark:text-white"
  />
</div>

      <!-- Role -->
      <div>
        <label class="block text-sm font-medium text-gray-900 dark:text-white">
          Your role
        </label>
        <select
          name="role"
          required
          class="mt-2 w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-900 shadow-sm dark:border-slate-700 dark:bg-slate-900 dark:text-white"
        >
          <option value="">Select…</option>
          <option>Owner</option>
          <option>Operator</option>
          <option>Manager</option>
          <option>Analyst</option>
          <option>Other</option>
        </select>
      </div>

      <!-- Business type -->
      <div>
        <label class="block text-sm font-medium text-gray-900 dark:text-white">
          Business type
        </label>
        <select
          name="business_type"
          required
          class="mt-2 w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-900 shadow-sm dark:border-slate-700 dark:bg-slate-900 dark:text-white"
        >
          <option value="">Select…</option>
          <option>Service business</option>
          <option>Retail</option>
          <option>Manufacturing</option>
          <option>Professional services</option>
          <option>Other</option>
        </select>
      </div>

      <!-- What does your business sell -->
      <div class="sm:col-span-2">
        <label class="block text-sm font-medium text-gray-900 dark:text-white">
          What does your business sell?
        </label>
        <input
          type="text"
          name="sells"
          required
          placeholder="Products, services, packages, contracts…"
          class="mt-2 w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-900 shadow-sm focus:border-gray-900 dark:border-slate-700 dark:bg-slate-900 dark:text-white"
        />
      </div>

      <!-- What does your business actually do -->
      <div class="sm:col-span-2">
        <label class="block text-sm font-medium text-gray-900 dark:text-white">
          What does your business actually do day to day?
        </label>
        <p class="mt-1 text-sm text-gray-600 dark:text-slate-300">
          Describe the work that happens to deliver what you sell.
        </p>
        <textarea
          name="does"
          rows="4"
          required
          class="mt-2 w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-900 shadow-sm focus:border-gray-900 dark:border-slate-700 dark:bg-slate-900 dark:text-white"
        ></textarea>
      </div>

      <!-- Anything else -->
      <div class="sm:col-span-2">
        <label class="block text-sm font-medium text-gray-900 dark:text-white">
          Anything else relevant to how your business operates? (optional)
        </label>
        <textarea
          name="notes"
          rows="3"
          class="mt-2 w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-900 shadow-sm dark:border-slate-700 dark:bg-slate-900 dark:text-white"
        ></textarea>
      </div>

      <!-- Consent -->
      <div class="sm:col-span-2 flex items-start gap-3">
        <input type="checkbox" name="consent" required class="mt-1" />
        <label class="text-sm text-gray-700 dark:text-slate-300">
          I understand Autoperate is invite-only and access requests are reviewed manually.
        </label>
      </div>

      <!-- Actions -->
      <div class="sm:col-span-2 flex items-center justify-between">
        <a href="/" class="text-sm text-gray-600 hover:text-gray-900 dark:text-slate-400 dark:hover:text-white">
          ← Back
        </a>

        <div class="text-right">
          <button
            type="submit"
            class="inline-flex items-center rounded-xl bg-gray-900 px-6 py-3 text-sm font-medium text-white shadow hover:bg-black dark:bg-white dark:text-black"
          >
            Submit request
          </button>
          <p class="mt-3 text-xs text-gray-600 dark:text-slate-400">
            Submitting this form does not guarantee access.
          </p>
        </div>
      </div>
    </form>
  </section>
</Layout>
